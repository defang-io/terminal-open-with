{
  "name": "terminal-open-with",
  "displayName": "Terminal Open With",
  "icon": "images/noun-external-link-4737798.png",
  "description": "Customize which app is used to open links from the terminal window",
  "repository": {
    "type": "git",
    "url": "https://github.com/lionello/terminal-open-with.git"
  },
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "author": {
    "name": "Lionello Lunesu",
    "email": "lio@lunesu.com"
  },
  "publisher": "lionello",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/main.js",
  "contributes": {
    "configuration": {
      "title": "Terminal Open With",
      "properties": {
        "terminalOpenWith.mappings": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "glob",
              "app"
            ],
            "properties": {
              "glob": {
                "type": "string",
                "minLength": 1,
                "default": "http://localhost**",
                "description": "The glob pattern to match against the link."
              },
              "app": {
                "type": "string",
                "enum": [
                  "chrome",
                  "firefox",
                  "edge",
                  "code",
                  "default"
                ],
                "default": "default",
                "description": "The app to use to open the link. Set to 'default' to use the default app."
              },
              "args": {
                "type": "array",
                "default": [],
                "items": {
                  "type": "string"
                },
                "description": "The arguments to pass to the app."
              }
            }
          },
          "default": [],
          "description": "An array of mappings that define which app to use to open links from the terminal window"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "clean": "rm -r ./out || true"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.18.0",
    "esbuild": "^0.16.12",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "open": "^8.4.0"
  }
}
